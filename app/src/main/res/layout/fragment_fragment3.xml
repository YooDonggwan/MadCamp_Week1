<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="Application1"
    tools:context="com.example.application1.MainActivity"
    tools:showIn="@layout/activity_main">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageButton
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:id="@+id/memgame_btn"
            android:background="@drawable/memorycard"
            android:padding="6sp"
            android:layout_margin="40sp"/>

        <ImageButton
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:id="@+id/oneto50_btn"
            android:background="#ffebcd"
            android:layout_margin="40sp"
            android:padding="6sp"
            android:layout_toRightOf="@+id/memgame_btn"
            android:foreground="@drawable/numbers"/>
    </RelativeLayout>
</RelativeLayout>
